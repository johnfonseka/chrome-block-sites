{
  "manifest_version": 3,
  "name": "Password Protected Page Blocker",
  "version": "1.0",
  "description": "Blocks specified websites and requires a password to unblock.",
  "permissions": ["storage", "tabs", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "options_page": "options.html",
  "content_scripts": [
    {
      "js": ["content_script.js"],
      "run_at": "document_start",
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; script-src-elem 'self' 'unsafe-inline' https://www.gstatic.com/;"
  }
}
